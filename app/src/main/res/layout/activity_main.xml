<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".MainActivity"
    android:columnCount="2"
    android:alignmentMode="alignBounds"
    android:useDefaultMargins="true"
    android:gravity="center_horizontal">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Robot&apos;s IP"
            android:id="@+id/textView3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2" />

        <EditText
            android:id="@+id/robotIPText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Enter IP address"
            android:lines="1"
            android:maxLines="1" />

    </LinearLayout>


    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connect"
        android:id="@+id/activateSwitch"
        android:onClick="onActivateClicked" />

    <GridLayout
        android:layout_columnSpan="2"
        android:columnCount="7"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:useDefaultMargins="true"
        android:visibility="invisible"
        android:id="@+id/controlLayout">

        <Button
            android:text="@string/speedUpBtnLabel"
            android:id="@+id/speedUpBtn"
            android:layout_columnSpan="4"
            android:layout_width="wrap_content"
            android:layout_column="3" />

        <Button
            android:text="@string/leftFastIcon"
            android:id="@+id/leftMaxBtn" />

        <Button
                android:text="@string/leftMedIcon"
                android:id="@+id/leftMedBtn" />

        <Button
                android:text="@string/leftSlowIcon"
                android:id="@+id/leftSlowBtn" />

        <Button
                android:text="@string/stopBtnLabel"
                android:id="@+id/stopBtn" />

        <Button
                android:text="@string/rightSlowIcon"
                android:id="@+id/rightSlowBtn" />

        <Button
                android:text="@string/rightMedIcon"
                android:id="@+id/rightMedBtn" />

        <Button
                android:text="@string/rightFastIcon"
                android:id="@+id/rightFastBtn" />

        <Button
                android:text="@string/speedDownBtnLabel"
                android:id="@+id/speedDownBtn"
            android:layout_row="4"
            android:layout_columnSpan="4"
            android:layout_column="3" />

    </GridLayout>

</LinearLayout>
