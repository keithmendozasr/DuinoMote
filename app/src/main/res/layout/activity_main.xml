<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:gravity="center"
    android:columnCount="7"
    android:alignmentMode="alignBounds"
    android:columnOrderPreserved="true"
    android:rowOrderPreserved="true"
    android:useDefaultMargins="true">

    <TextView
        android:text="Robot&apos;s IP"
        android:id="@+id/textView3"  />

    <EditText
        android:id="@+id/robotIPText"
        android:layout_columnSpan="6" />

    <Button
        android:text="Set IP"
        android:id="@+id/ipSetBtn"
        android:layout_weight="1"
        android:layout_row="1"
        android:layout_column="3"
        android:layout_columnSpan="4" />

    <Button
        android:text="@string/speedUpBtnLabel"
        android:id="@+id/speedUpBtn"
        android:layout_row="2"
        android:layout_column="3"
        android:layout_columnSpan="4" />

    <Button
        android:text="@string/leftFastIcon"
        android:id="@+id/leftMaxBtn" />

        <Button
            android:text="@string/leftMedIcon"
            android:id="@+id/leftMedBtn" />

        <Button
            android:text="@string/leftSlowIcon"
            android:id="@+id/leftSlowBtn" />


        <Button
            android:text="@string/stopBtnLabel"
            android:id="@+id/stopBtn" />

        <Button
            android:text="@string/rightSlowIcon"
            android:id="@+id/rightSlowBtn" />

        <Button
            android:text="@string/rightMedIcon"
            android:id="@+id/rightMedBtn" />

        <Button
            android:text="@string/rightFastIcon"
            android:id="@+id/rightFastBtn" />

    <Button
            android:text="@string/speedDownBtnLabel"
            android:id="@+id/speedDownBtn"
        android:layout_row="4"
        android:layout_column="3"
        android:layout_columnSpan="4" />

</GridLayout>
